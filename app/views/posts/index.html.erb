<div class="container">
  <h1>Simple Chat App</h1>

  <div class="row">
    <div class="col-8 mx-auto mb-3">
      <%= turbo_frame_tag 'post_form' do %>
        <%= render partial: "form", post: @post %>
      <% end %>

      <%= turbo_stream_from :posts %>
      <%= turbo_frame_tag 'posts' do %>
        <%= render @posts %>
      <% end %>
    </div>
  </div>
</div>